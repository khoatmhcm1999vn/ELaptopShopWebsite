@model IEnumerable<FinalProjectShopLaptop.Models.SanPham>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}

<table class="table table-striped table-condensed" id="sanPhamTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Card)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KichThuocManHinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhomSanPham.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hang.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hang.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Card)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KichThuocManHinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.NhomSanPham.Ten)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.Hang.Ten)
                </td>
                <td>
                    <img src="@Url.Content(item.ImagePath)" style="margin:10px" height="200" width="200" id="imagePreview" />
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "SanPham", new { id=@item.Id})')"><i class="fa fa-pencil fa-lg"></i></a>
                    <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "SanPham", new { id=@item.Id})')"><i class="fa fa-trash fa-lg"></i></a>
                    <a class="btn btn-info btn-sm" href="../SanPham/Detail/@item.Id"><i class="fa fa-pencil fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
